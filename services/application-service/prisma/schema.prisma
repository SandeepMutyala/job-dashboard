generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum application_status {
  pending
  interview
  rejected
  hired
}

model application {
  id           Int               @id @default(autoincrement())
  job_id       Int
  applicant_id Int
  resume_id    Int
  status       application_status @default(pending)
  applied_at   DateTime          @default(now())
}
