generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model resume_analysis {
  id            Int       @id @default(autoincrement())
  user_id       Int
  resume_id     Int
  skills_detected String?
  score         Int?
  analyzed_at   DateTime  @default(now())
}

model job_match {
  id          Int       @id @default(autoincrement())
  job_id      Int
  user_id     Int
  match_score Int
  created_at  DateTime  @default(now())
}
