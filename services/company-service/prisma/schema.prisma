generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum company_user_role {
  owner
  recruiter
}

model company {
  id           Int            @id @default(autoincrement())
  name         String
  website      String?
  location     String?
  description  String?

  company_users company_user[]
}

model company_user {
  id            Int             @id @default(autoincrement())
  company_id    Int
  user_id       Int
  role_in_company company_user_role

  company       company         @relation(fields: [company_id], references: [id])
}
