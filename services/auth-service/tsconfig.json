{
  "compilerOptions": {
    "target": "ES2020",                      
    "module": "CommonJS",                    
    "outDir": "dist",                         
    "rootDir": ".",                           
    "strict": true,                           
    "esModuleInterop": true,                 
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,                     
    "types": ["node"],                        
    "resolveJsonModule": true,                
    "moduleResolution": "node"                
  },
  "include": ["./**/*.ts"],                   
  "exclude": ["node_modules", "dist"]         
}
